
@{
    ViewData["Title"] = "CreateReseña";
}


<body class=" " data-bs-spy="scroll" data-bs-target="#elements-section" data-bs-offset="0" tabindex="0">

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="header-title">
                        <h4 class="card-title">Reseñando</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 col-lg-6 col-sm-12">
                                <label for="">Nombre del Libro</label>
                                <input type="text" class="form-control">
                            </div>
                            <div class="col-md-6 col-lg-6 col-sm-12">
                                <label for="">Nombre del autor</label>
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-lg-6 col-sm-12">
                                <label for="">Genero</label>
                                <input type="text" class="form-control">
                            </div>
                            <div class="col-md-6 col-lg-6 col-sm-12">
                                <label for="">Paginas del libro</label>
                                <input type="number" class="form-control">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-lg-6 col-sm-12">
                                <label for="">Puntuacion de los personajes</label>
                                <input type="number" max="10" class="form-control">
                            </div>
                            <div class="col-md-6 col-lg-6 col-sm-12">
                                <label for="">Frase Favorita</label>
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-lg-6 col-sm-12">
                                <label for="">Puntuación del libro</label>
                                <input type="number" max="10" class="form-control">
                            </div>
                            <div class="col-md-6 col-lg-6 col-sm-12">
                                <label for="">Puntuacion de la trama</label>
                                <input type="number" max="10" class="form-control">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-lg-12 col-sm-12">
                                <label for="">Reseña</label>
                                <input type="text" class="form-control">
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>